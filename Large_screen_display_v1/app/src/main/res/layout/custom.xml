<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    android:fitsSystemWindows="true"
    tools:context=".filter.FilterActivity">


    <com.example.large_screen_display_v1.filter.FilterLayout
        android:id="@+id/filter_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_layout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="72dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#f6f5f6"
        app:layout_constraintTop_toBottomOf="@+id/filter_list" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/filter_btn2_bg"
            android:onClick="reset"
            android:text="清除" />

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5"
            android:background="@drawable/filter_btn_bg"
            android:onClick="ok"
            android:text="确定"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>